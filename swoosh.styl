.sw-inner
  box-sizing content-box
  display inline-block
  transform-origin 0 0

.sw-inner:before
  position absolute
  content ''
  pointer-events none

.sw-grab .sw-inner img
  pointer-events none
  user-drag none
  user-select none
  -moz-user-select none
  -webkit-user-drag none
  -webkit-user-select none
  -ms-user-select none

.sw-grab .sw-inner .sw-ignore
  cursor auto

.sw-grab .sw-inner
  cursor url(grab.cur), move
  cursor grab
  cursor -moz-grab
  cursor -webkit-grab

.sw-grabbing
  cursor url(grabbing.cur), move
  cursor grabbing
  cursor -moz-grabbing
  cursor -webkit-grabbing
  user-select none

.sw-nograb .sw-inner
  cursor auto !important
